{
  "version": 2,
  "builds": [
    {
      "src": "api/scan/index.js",
      "use": "@vercel/node",
      "config": {
        "memory": 1024,
        "maxDuration": 10
      }
    },
    {
      "src": "api/scan/process_blueprint.py",
      "use": "@vercel/python",
      "config": {
        "runtime": "python3.9",
        "memory": 2048,
        "maxDuration": 30
      }
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/scan",
      "methods": ["POST"],
      "dest": "api/scan/index.js"
    },
    {
      "src": "/api/(.*)",
      "dest": "api/scan/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}

