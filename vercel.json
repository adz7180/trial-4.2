{
  "functions": {
    "api/scan/index.js": { "runtime": "nodejs18.x" },
    "api/scan/process_blueprint.py": { "runtime": "python3.9" }
  },
  "rewrites": [
    // 1) Let all /api/* calls go to the serverless functions
    { "source": "/api/(.*)", "destination": "/api/$1" },
    // 2) Rewrite everything else to index.html for your SPA
    { "source": "/(.*)",    "destination": "/index.html" }
  ]
}
